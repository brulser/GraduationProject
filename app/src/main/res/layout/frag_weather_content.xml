                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="较为适宜"
                android:textColor="@color/colorWeatherTextTop"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cleancar_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="天凉，昼夜温差较大，较易发生感冒，请适当增减衣服，体质较弱的朋友请注意适当防护。"
                android:textColor="@color/color_text_second"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@drawable/cold_weather" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
